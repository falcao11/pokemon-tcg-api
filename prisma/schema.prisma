generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId    String       @id @default(cuid())
  email     String       @unique
  password  String
  username  String       @unique
  colletion Collection[] @relation("user_id_collection")
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt()

  @@map("users")
}

model Collection {
  collectionId String           @id @default(cuid())
  setId        String
  userId       String
  user         User?            @relation("user_id_collection", fields: [userId], references: [userId])
  cards        CardCollection[] @relation("collection_id_card")
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt()

  @@map("collections")
}

model CardCollection {
  cardCollectionId String      @id @default(cuid())
  cardId           String      @unique
  collectionId     String
  collection       Collection? @relation("collection_id_card", fields: [collectionId], references: [collectionId], onDelete: Cascade)
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt()

  @@map("card_collections")
}
